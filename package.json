{
  "name": "ai-sales-assistant",
  "version": "1.0.0",
  "description": "AI Sales Assistant - High-performance React + Electron + Zustand",
  "main": "public/electron.js",
  "author": "Muscled Inc",
  "license": "MIT",
  "homepage": "./",
  "scripts": {
    "start": "electron .",
    "dev": "concurrently \"npm run react\" \"wait-on http://localhost:3000 && set ELECTRON_IS_DEV=true&& electron .\"",
    "react": "react-scripts start",
    "build": "react-scripts build",
    "electron-build": "npm run build && electron-builder",
    "electron-dev": "set ELECTRON_IS_DEV=true&& electron .",
    "test": "react-scripts test",
    "eject": "react-scripts eject",
    "dist": "npm run build && electron-builder --publish=never",
    "dist:win": "npm run build && electron-builder --win --publish=never",
    "dist:mac": "npm run build && electron-builder --mac --publish=never",
    "dist:linux": "npm run build && electron-builder --linux --publish=never",
    "dist:dir": "npm run build && electron-builder --dir --publish=never",
    "dist:all": "npm run build && electron-builder --win --mac --linux --publish=never",
    "pack": "npm run build && electron-builder --dir",
    "postinstall": "electron-builder install-app-deps"
  },
  "dependencies": {
    "dotenv": "^16.3.1",
    "electron": "^27.0.0",
    "electron-is-dev": "^2.0.0",
    "electron-store": "^8.1.0",
    "immer": "^10.0.0",
    "openai": "^5.12.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-router-dom": "^7.8.2",
    "ws": "^8.18.3",
    "zustand": "^4.4.0"
  },
  "devDependencies": {
    "@types/node": "^20.0.0",
    "@types/react": "^18.2.0",
    "@types/react-dom": "^18.2.0",
    "concurrently": "^8.2.0",
    "electron-builder": "^24.6.4",
    "react-scripts": "5.0.1",
    "typescript": "^5.0.0",
    "wait-on": "^7.0.1"
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "build": {
    "appId": "com.smartcallmate.app",
    "productName": "SmartCallMate",
    "artifactName": "${productName}-${version}-${os}-${arch}.${ext}",
    "directories": {
      "output": "dist"
    },
    "files": [
      "build/**/*",
      "public/electron.js",
      "public/overlayWindow.js",
      "public/preload.js",
      "node_modules/**/*",
      "!node_modules/@types/**/*",
      "!node_modules/typescript/**/*"
    ],
    "extraResources": [
      {
        "from": "public/tray-icon.png",
        "to": "tray-icon.png",
        "filter": ["**/*"]
      }
    ],
    "win": {
      "target": [
        {
          "target": "nsis",
          "arch": ["x64", "ia32"]
        },
        {
          "target": "zip",
          "arch": ["x64", "ia32"]
        }
      ],
      "icon": "public/icon.png",
      "artifactName": "${productName}-Setup-${version}.${ext}",
      "publisherName": "Muscled Inc"
    },
    "mac": {
      "target": [
        {
          "target": "dmg",
          "arch": ["x64", "arm64"]
        },
        {
          "target": "zip",
          "arch": ["x64", "arm64"]
        }
      ],
      "icon": "public/icon.png",
      "artifactName": "${productName}-${version}-${arch}.${ext}",
      "category": "public.app-category.business"
    },
    "linux": {
      "target": [
        {
          "target": "AppImage",
          "arch": ["x64"]
        },
        {
          "target": "deb",
          "arch": ["x64"]
        }
      ],
      "icon": "public/icon.png",
      "category": "Office"
    },
    "nsis": {
      "oneClick": false,
      "perMachine": false,
      "allowToChangeInstallationDirectory": true,
      "deleteAppDataOnUninstall": false,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true
    },
    "dmg": {
      "title": "${productName} ${version}",
      "artifactName": "${productName}-${version}.${ext}"
    }
  }
}
